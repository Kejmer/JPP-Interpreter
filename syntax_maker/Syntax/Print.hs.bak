{-# LANGUAGE CPP #-}
{-# LANGUAGE FlexibleInstances #-}
{-# LANGUAGE LambdaCase #-}
#if __GLASGOW_HASKELL__ <= 708
{-# LANGUAGE OverlappingInstances #-}
#endif

{-# OPTIONS_GHC -fno-warn-incomplete-patterns #-}

-- | Pretty-printer for Syntax.
--   Generated by the BNF converter.

module Syntax.Print where

import Prelude
  ( ($), (.)
  , Bool(..), (==), (<)
  , Int, Integer, Double, (+), (-), (*)
  , String, (++)
  , ShowS, showChar, showString
  , all, dropWhile, elem, foldr, id, map, null, replicate, shows, span
  )
import Data.Char ( Char, isSpace )
import qualified Syntax.Abs

-- | The top-level printing method.

printTree :: Print a => a -> String
printTree = render . prt 0

type Doc = [ShowS] -> [ShowS]

doc :: ShowS -> Doc
doc = (:)

render :: Doc -> String
render d = rend 0 (map ($ "") $ d []) "" where
  rend i = \case
    "["      :ts -> showChar '[' . rend i ts
    "("      :ts -> showChar '(' . rend i ts
    "{"      :ts -> showChar '{' . new (i+1) . rend (i+1) ts
    "}" : ";":ts -> new (i-1) . space "}" . showChar ';' . new (i-1) . rend (i-1) ts
    "}"      :ts -> new (i-1) . showChar '}' . new (i-1) . rend (i-1) ts
    [";"]        -> showChar ';'
    ";"      :ts -> showChar ';' . new i . rend i ts
    t  : ts@(p:_) | closingOrPunctuation p -> showString t . rend i ts
    t        :ts -> space t . rend i ts
    _            -> id
  new i     = showChar '\n' . replicateS (2*i) (showChar ' ') . dropWhile isSpace
  space t s =
    case (all isSpace t', null spc, null rest) of
      (True , _   , True ) -> []              -- remove trailing space
      (False, _   , True ) -> t'              -- remove trailing space
      (False, True, False) -> t' ++ ' ' : s   -- add space if none
      _                    -> t' ++ s
    where
      t'          = showString t []
      (spc, rest) = span isSpace s

  closingOrPunctuation :: String -> Bool
  closingOrPunctuation [c] = c `elem` closerOrPunct
  closingOrPunctuation _   = False

  closerOrPunct :: String
  closerOrPunct = ")],;"

parenth :: Doc -> Doc
parenth ss = doc (showChar '(') . ss . doc (showChar ')')

concatS :: [ShowS] -> ShowS
concatS = foldr (.) id

concatD :: [Doc] -> Doc
concatD = foldr (.) id

replicateS :: Int -> ShowS -> ShowS
replicateS n f = concatS (replicate n f)

-- | The printer class does the job.

class Print a where
  prt :: Int -> a -> Doc
  prtList :: Int -> [a] -> Doc
  prtList i = concatD . map (prt i)

instance {-# OVERLAPPABLE #-} Print a => Print [a] where
  prt = prtList

instance Print Char where
  prt     _ s = doc (showChar '\'' . mkEsc '\'' s . showChar '\'')
  prtList _ s = doc (showChar '"' . concatS (map (mkEsc '"') s) . showChar '"')

mkEsc :: Char -> Char -> ShowS
mkEsc q = \case
  s | s == q -> showChar '\\' . showChar s
  '\\' -> showString "\\\\"
  '\n' -> showString "\\n"
  '\t' -> showString "\\t"
  s -> showChar s

prPrec :: Int -> Int -> Doc -> Doc
prPrec i j = if j < i then parenth else id

instance Print Integer where
  prt _ x = doc (shows x)

instance Print Double where
  prt _ x = doc (shows x)

instance Print Syntax.Abs.Ident where
  prt _ (Syntax.Abs.Ident i) = doc $ showString i

instance Print Syntax.Abs.Program where
  prt i = \case
    Syntax.Abs.Program stmts -> prPrec i 0 (concatD [prt 0 stmts])

instance Print Syntax.Abs.Block where
  prt i = \case
    Syntax.Abs.Blok stmts -> prPrec i 0 (concatD [doc (showString "do"), prt 0 stmts, doc (showString "end")])

instance Print Syntax.Abs.HBlock where
  prt i = \case
    Syntax.Abs.AsProc pblock -> prPrec i 0 (concatD [prt 0 pblock])
    Syntax.Abs.AsStmt stmt -> prPrec i 0 (concatD [prt 0 stmt])

instance Print Syntax.Abs.Stmt where
  prt i = \case
    Syntax.Abs.BStmt block -> prPrec i 0 (concatD [prt 0 block])
    Syntax.Abs.DeclConst basictype id_ expr -> prPrec i 0 (concatD [prt 0 basictype, doc (showString "mut"), prt 0 id_, doc (showString "="), prt 0 expr])
    Syntax.Abs.DeclMut basictype id_ expr -> prPrec i 0 (concatD [prt 0 basictype, prt 0 id_, doc (showString "="), prt 0 expr])
    Syntax.Abs.Ass id_ expr -> prPrec i 0 (concatD [prt 0 id_, doc (showString "="), prt 0 expr])
    Syntax.Abs.ArrAss id_ expr1 expr2 -> prPrec i 0 (concatD [prt 0 id_, doc (showString "["), prt 0 expr1, doc (showString "]"), doc (showString "="), prt 0 expr2])
    Syntax.Abs.Ret expr -> prPrec i 0 (concatD [doc (showString "return"), prt 0 expr])
    Syntax.Abs.If expr hblock -> prPrec i 0 (concatD [doc (showString "if"), doc (showString "("), prt 0 expr, doc (showString ")"), prt 0 hblock])
    Syntax.Abs.IfElse expr hblock1 hblock2 -> prPrec i 0 (concatD [doc (showString "if"), doc (showString "("), prt 0 expr, doc (showString ")"), prt 0 hblock1, doc (showString "else"), prt 0 hblock2])
    Syntax.Abs.While expr hblock -> prPrec i 0 (concatD [doc (showString "while"), doc (showString "("), prt 0 expr, doc (showString ")"), prt 0 hblock])
    Syntax.Abs.Print expr -> prPrec i 0 (concatD [doc (showString "print"), doc (showString "("), prt 0 expr, doc (showString ")")])
    Syntax.Abs.For expr proc_ -> prPrec i 0 (concatD [doc (showString "for"), prt 0 expr, prt 0 proc_])
    Syntax.Abs.SExp expr -> prPrec i 0 (concatD [prt 0 expr])
    Syntax.Abs.FDef basictype id_ args pblock -> prPrec i 0 (concatD [doc (showString "def"), prt 0 basictype, prt 0 id_, doc (showString "("), prt 0 args, doc (showString ")"), prt 0 pblock])
    Syntax.Abs.FDefAlt basictype id_ args lambda -> prPrec i 0 (concatD [doc (showString "def"), prt 0 basictype, prt 0 id_, doc (showString "("), prt 0 args, doc (showString ")"), prt 0 lambda])
  prtList _ [] = concatD []
  prtList _ (x:xs) = concatD [prt 0 x, doc (showString ";"), prt 0 xs]

instance Print [Syntax.Abs.Stmt] where
  prt = prtList

instance Print Syntax.Abs.Type where
  prt i = \case
    Syntax.Abs.Ref basictype -> prPrec i 0 (concatD [doc (showString "&"), prt 0 basictype])
    Syntax.Abs.MutRef basictype -> prPrec i 0 (concatD [doc (showString "&mut"), prt 0 basictype])
    Syntax.Abs.Mut basictype -> prPrec i 0 (concatD [doc (showString "mut"), prt 0 basictype])
    Syntax.Abs.Cpy basictype -> prPrec i 0 (concatD [prt 0 basictype])
  prtList _ [] = concatD []
  prtList _ [x] = concatD [prt 0 x]
  prtList _ (x:xs) = concatD [prt 0 x, doc (showString ","), prt 0 xs]

instance Print [Syntax.Abs.Type] where
  prt = prtList

instance Print Syntax.Abs.BasicType where
  prt i = \case
    Syntax.Abs.Arr basictype -> prPrec i 0 (concatD [prt 0 basictype, doc (showString "[]")])
    Syntax.Abs.Int -> prPrec i 0 (concatD [doc (showString "int")])
    Syntax.Abs.Str -> prPrec i 0 (concatD [doc (showString "string")])
    Syntax.Abs.Bool -> prPrec i 0 (concatD [doc (showString "bool")])
    Syntax.Abs.Void -> prPrec i 0 (concatD [doc (showString "void")])
    Syntax.Abs.Fun basictype types -> prPrec i 0 (concatD [prt 0 basictype, doc (showString "lambda"), doc (showString "("), prt 0 types, doc (showString ")")])
    Syntax.Abs.Proc basictype types -> prPrec i 0 (concatD [prt 0 basictype, doc (showString "proc"), doc (showString "("), prt 0 types, doc (showString ")")])
  prtList _ [] = concatD []
  prtList _ [x] = concatD [prt 0 x]
  prtList _ (x:xs) = concatD [prt 0 x, doc (showString ","), prt 0 xs]

instance Print [Syntax.Abs.BasicType] where
  prt = prtList

instance Print Syntax.Abs.Proc where
  prt i = \case
    Syntax.Abs.PDec args block -> prPrec i 0 (concatD [doc (showString "proc"), doc (showString "("), prt 0 args, doc (showString ")"), prt 0 block])

instance Print Syntax.Abs.Lambda where
  prt i = \case
    Syntax.Abs.LDec basictype args block -> prPrec i 0 (concatD [prt 0 basictype, doc (showString "lambda"), doc (showString "("), prt 0 args, doc (showString ")"), prt 0 block])

instance Print Syntax.Abs.PBlock where
  prt i = \case
    Syntax.Abs.FProc proc_ -> prPrec i 0 (concatD [prt 0 proc_])
    Syntax.Abs.FBlok block -> prPrec i 0 (concatD [prt 0 block])
    Syntax.Abs.FVar id_ -> prPrec i 0 (concatD [prt 0 id_])

instance Print Syntax.Abs.Arg where
  prt i = \case
    Syntax.Abs.FArg type_ id_ -> prPrec i 0 (concatD [prt 0 type_, prt 0 id_])
  prtList _ [] = concatD []
  prtList _ [x] = concatD [prt 0 x]
  prtList _ (x:xs) = concatD [prt 0 x, doc (showString ","), prt 0 xs]

instance Print [Syntax.Abs.Arg] where
  prt = prtList

instance Print Syntax.Abs.Expr where
  prt i = \case
    Syntax.Abs.EVar id_ -> prPrec i 6 (concatD [prt 0 id_])
    Syntax.Abs.EInt n -> prPrec i 6 (concatD [prt 0 n])
    Syntax.Abs.ETrue -> prPrec i 6 (concatD [doc (showString "true")])
    Syntax.Abs.EFalse -> prPrec i 6 (concatD [doc (showString "false")])
    Syntax.Abs.EString str -> prPrec i 6 (concatD [prt 0 str])
    Syntax.Abs.EParen expr -> prPrec i 6 (concatD [doc (showString "("), prt 0 expr, doc (showString ")")])
    Syntax.Abs.EProc proc_ -> prPrec i 6 (concatD [prt 0 proc_])
    Syntax.Abs.ELamb lambda -> prPrec i 6 (concatD [prt 0 lambda])
    Syntax.Abs.ECall expr exprs -> prPrec i 6 (concatD [prt 6 expr, doc (showString "("), prt 0 exprs, doc (showString ")")])
    Syntax.Abs.EArr exprs -> prPrec i 6 (concatD [doc (showString "["), prt 0 exprs, doc (showString "]")])
    Syntax.Abs.EArrRead id_ expr -> prPrec i 6 (concatD [prt 0 id_, doc (showString "["), prt 0 expr, doc (showString "]")])
    Syntax.Abs.Neg expr -> prPrec i 5 (concatD [doc (showString "-"), prt 6 expr])
    Syntax.Abs.Not expr -> prPrec i 5 (concatD [doc (showString "!"), prt 5 expr])
    Syntax.Abs.EMul expr1 mulop expr2 -> prPrec i 4 (concatD [prt 4 expr1, prt 0 mulop, prt 4 expr2])
    Syntax.Abs.EAdd expr1 addop expr2 -> prPrec i 3 (concatD [prt 3 expr1, prt 0 addop, prt 3 expr2])
    Syntax.Abs.EComp expr1 compop expr2 -> prPrec i 2 (concatD [prt 2 expr1, prt 0 compop, prt 2 expr2])
    Syntax.Abs.EAnd expr1 expr2 -> prPrec i 1 (concatD [prt 1 expr1, doc (showString "&&"), prt 1 expr2])
    Syntax.Abs.EOr expr1 expr2 -> prPrec i 0 (concatD [prt 0 expr1, doc (showString "||"), prt 0 expr2])
  prtList _ [] = concatD []
  prtList _ [x] = concatD [prt 0 x]
  prtList _ (x:xs) = concatD [prt 0 x, doc (showString ","), prt 0 xs]

instance Print [Syntax.Abs.Expr] where
  prt = prtList

instance Print Syntax.Abs.AddOp where
  prt i = \case
    Syntax.Abs.Plus -> prPrec i 0 (concatD [doc (showString "+")])
    Syntax.Abs.Minus -> prPrec i 0 (concatD [doc (showString "-")])

instance Print Syntax.Abs.MulOp where
  prt i = \case
    Syntax.Abs.Times -> prPrec i 0 (concatD [doc (showString "*")])
    Syntax.Abs.Div -> prPrec i 0 (concatD [doc (showString "/")])
    Syntax.Abs.Mod -> prPrec i 0 (concatD [doc (showString "%")])

instance Print Syntax.Abs.CompOp where
  prt i = \case
    Syntax.Abs.Low -> prPrec i 0 (concatD [doc (showString "<")])
    Syntax.Abs.Grt -> prPrec i 0 (concatD [doc (showString ">")])
    Syntax.Abs.LowEq -> prPrec i 0 (concatD [doc (showString "<=")])
    Syntax.Abs.GrtEq -> prPrec i 0 (concatD [doc (showString ">=")])
    Syntax.Abs.Eq -> prPrec i 0 (concatD [doc (showString "==")])
    Syntax.Abs.NEq -> prPrec i 0 (concatD [doc (showString "!=")])

